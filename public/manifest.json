{
  "manifest_version": 3,
  "name": "TOTP Authenticator",
  "version": "1.0.0",
  "description": "A simple TOTP generator extension.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}